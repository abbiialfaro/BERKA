@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate que este layout existe
}

<style>
    body {
        background-image: url('/images/fondo-revision.jpg.jpg'); 
        background-size: cover;
        background-position: center;
        height: 100vh;
        margin: 0;
    }

    .inicio-wrapper {
        background-color: rgba(255, 255, 255, 0.95);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        text-align: center;
        max-width: 450px;
        margin: auto;
        margin-top: 10%;
    }

    .inicio-wrapper img {
        max-width: 120px;
        margin-bottom: 20px;
    }

    .btn-login {
        background-color: #2e7d32;
        border: none;
    }

    .btn-login:hover {
        background-color: #1b5e20;
    }
</style>

<div class="inicio-wrapper">
    <img src="~/images/car-icon.png" />
    <h1 class="display-6">Bienvenido a Bekra</h1>
    <p class="lead">El sistema de revisión técnica vehicular confiable y eficiente.</p>
    <a href="/Account/Login" class="btn btn-login btn-lg text-white mt-3">Iniciar sesión</a>
</div>
