@* @model BERKA.Web.Models.VehiculoViewModel *@

@{
    ViewData["Title"] = "Administrador de Vehículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-success">🚗 @ViewData["Title"]</h1>
<hr />

<style>
    .collapsible {
        background-color: #eee;
        color: #444;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15pt;
        margin-bottom: 10px;
    }

        .active, .collapsible:hover {
            background-color: #ccc;
        }

    .content {
        display: none;
        overflow: hidden;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 5px;
        border: 1px solid #ddd;
        margin-bottom: 20px;
    }
</style>

<!-- Registrar Vehículo -->
<button type="button" class="collapsible">Registrar Vehículo</button>
<div class="content">
    <form asp-action="RegistrarVehiculo" method="post">
        <div class="form-group mb-3">
            <label asp-for="Placa" class="form-label">Placa:</label>
            <input asp-for="Placa" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Marca" class="form-label">Marca:</label>
            <input asp-for="Marca" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Modelo" class="form-label">Modelo:</label>
            <input asp-for="Modelo" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Color" class="form-label">Color:</label>
            <input asp-for="Color" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Anio" class="form-label">Año:</label>
            <input asp-for="Anio" type="number" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success">Registrar Vehículo</button>
    </form>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-info mt-4">@ViewBag.Mensaje</div>
    }
</div>

<!-- Actualizar Vehículo -->
<button type="button" class="collapsible">Actualizar Vehículo</button>
<div class="content">
    <form asp-action="ActualizarVehiculo" method="post">
        <div class="form-group mb-3">
            <label asp-for="ID_Vehiculo" class="form-label">ID:</label>
            <input asp-for="ID_Vehiculo" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Marca" class="form-label">Nueva Marca:</label>
            <input asp-for="Marca" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Modelo" class="form-label">Nuevo Modelo:</label>
            <input asp-for="Modelo" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Color" class="form-label">Nuevo Color:</label>
            <input asp-for="Color" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Anio" class="form-label">Nuevo Año:</label>
            <input asp-for="Anio" type="number" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Actualizar Vehículo</button>
    </form>
</div>

<!-- Eliminar Vehículo -->
<button type="button" class="collapsible">Eliminar Vehículo</button>
<div class="content">
    <form asp-action="EliminarVehiculo" method="post">
        <div class="form-group mb-3">
            <label for="idEliminar" class="form-label">ID de Vehículo a Eliminar:</label>
            <input id="idEliminar" name="ID_Vehiculo" type="number" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-danger">Eliminar Vehículo</button>
    </form>
</div>

<!-- Consultar Vehículo -->
<button type="button" class="collapsible">Consultar Vehículo</button>
<div class="content">
    <form asp-action="ConsultarVehiculo" method="get" class="mb-4">
        <div class="form-group mb-3">
            <label for="idConsultar" class="form-label">ID de Vehículo:</label>
            <input id="idConsultar" name="id" type="number" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-info">Consultar</button>
    </form>

    @if (Model != null && Model.ID_Vehiculo > 0)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Detalles de Vehículo #@Model.ID_Vehiculo</h5>
                <p><strong>Placa:</strong> @Model.Placa</p>
                <p><strong>Marca:</strong> @Model.Marca</p>
                <p><strong>Modelo:</strong> @Model.Modelo</p>
                <p><strong>Color:</strong> @Model.Color</p>
                <p><strong>Año:</strong> @Model.Anio</p>
            </div>
        </div>
    }
</div>

<script>
    document.querySelectorAll(".collapsible").forEach(btn => {
        btn.addEventListener("click", () => {
            btn.classList.toggle("active");
            const content = btn.nextElementSibling;
            content.style.display = content.style.display === "block" ? "none" : "block";
        });
    });
</script>
