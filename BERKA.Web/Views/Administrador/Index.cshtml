@{
    ViewData["Title"] = "Dashboard Administrador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-success">📊 Panel del Administrador</h1>
    <p class="text-muted">Selecciona una sección para administrar:</p>

    <div class="row g-4">
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Cliente")" class="btn btn-outline-success w-100">
                👥 Administrar Clientes
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Cita")" class="btn btn-outline-success w-100">
                📅 Administrar Citas
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Vehiculo")" class="btn btn-outline-success w-100">
                🚗 Administrar Vehículos
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Revision")" class="btn btn-outline-success w-100">
                🔍 Administrar Revisiones
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Estacion")" class="btn btn-outline-success w-100">
                ⛽ Administrar Estaciones
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Combustible")" class="btn btn-outline-success w-100">
                💧 Administrar Combustibles
            </a>
        </div>
    </div>
</div>
<div class="d-flex justify-content-end mb-3">
    <form asp-action="Dashboard" asp-controller="Administrador" method="get">
        <button type="submit" class="btn btn-outline-success">
            🔄 Refrescar Dashboard
        </button>
    </form>
</div>

<div class="card mt-5">
    <div class="card-body">
        <h5 class="card-title">Citas en los últimos 7 días</h5>
        <canvas id="graficoCitas" width="400" height="200"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('graficoCitas').getContext('2d');
        const graficoCitas = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ["@DateTime.Today.AddDays(-6).ToString("dd-MMM")", "@DateTime.Today.AddDays(-5).ToString("dd-MMM")", "@DateTime.Today.AddDays(-4).ToString("dd-MMM")", "@DateTime.Today.AddDays(-3).ToString("dd-MMM")", "@DateTime.Today.AddDays(-2).ToString("dd-MMM")", "@DateTime.Today.AddDays(-1).ToString("dd-MMM")", "@DateTime.Today.ToString("dd-MMM")"],
                datasets: [{
                    label: 'Citas Registradas',
                    data: [3, 5, 7, 4, 8, 6, 9],
                    backgroundColor: 'rgba(0, 128, 0, 0.2)',
                    borderColor: 'rgba(0, 128, 0, 1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        precision: 0
                    }
                }
            }
        });
    </script>

    <script>
        const ctxDoughnut = document.getElementById('graficoRevisiones')?.getContext('2d');
        if (ctxDoughnut) {
            const chart = new Chart(ctxDoughnut, {
                type: 'doughnut',
                data: {
                    labels: ['Aprobados', 'Rechazados'],
                    datasets: [{
                        label: 'Revisiones',
                        data: [@ViewBag.Aprobados, @ViewBag.Rechazados],
                        backgroundColor: ['#28a745', '#dc3545'],
                        borderColor: ['#ffffff', '#ffffff'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }
    </script>
}