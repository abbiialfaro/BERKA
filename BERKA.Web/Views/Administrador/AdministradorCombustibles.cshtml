@* @model BERKA.Web.Models.CombustibleViewModel *@
@{
    ViewData["Title"] = "Administrador de Combustibles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-success">⛽ @ViewData["Title"]</h1>
<hr />

<style>
    .collapsible {
        background-color: #eee;
        color: #444;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15pt;
        margin-bottom: 10px;
    }

        .active, .collapsible:hover {
            background-color: #ccc;
        }

    .content {
        display: none;
        overflow: hidden;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 5px;
        border: 1px solid #ddd;
        margin-bottom: 20px;
    }
</style>

<!-- Registrar Combustible -->
<button type="button" class="collapsible">Registrar Combustible</button>
<div class="content">
    <form asp-action="RegistrarCombustible" method="post">
        <div class="form-group mb-3">
            <label asp-for="Tipo" class="form-label">Tipo de Combustible:</label>
            <input asp-for="Tipo" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="PrecioPorLitro" class="form-label">Precio por Litro:</label>
            <input asp-for="PrecioPorLitro" type="number" step="0.01" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Stock" class="form-label">Stock Disponible (litros):</label>
            <input asp-for="Stock" type="number" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success">Registrar Combustible</button>
    </form>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-info mt-4">@ViewBag.Mensaje</div>
    }
</div>

<!-- Actualizar Combustible -->
<button type="button" class="collapsible">Actualizar Combustible</button>
<div class="content">
    <form asp-action="ActualizarCombustible" method="post">
        <div class="form-group mb-3">
            <label asp-for="ID_Combustible" class="form-label">ID:</label>
            <input asp-for="ID_Combustible" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label asp-for="PrecioPorLitro" class="form-label">Nuevo Precio por Litro:</label>
            <input asp-for="PrecioPorLitro" type="number" step="0.01" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Stock" class="form-label">Nuevo Stock (litros):</label>
            <input asp-for="Stock" type="number" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Actualizar Combustible</button>
    </form>
</div>

<!-- Eliminar Combustible -->
<button type="button" class="collapsible">Eliminar Combustible</button>
<div class="content">
    <form asp-action="EliminarCombustible" method="post">
        <div class="form-group mb-3">
            <label for="idEliminar" class="form-label">ID de Combustible a Eliminar:</label>
            <input id="idEliminar" name="ID_Combustible" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-danger">Eliminar Combustible</button>
    </form>
</div>

<!-- Consultar Combustible -->
<button type="button" class="collapsible">Consultar Combustible</button>
<div class="content">
    <form asp-action="ConsultarCombustible" method="get" class="mb-4">
        <div class="form-group mb-3">
            <label for="idConsultar" class="form-label">ID de Combustible:</label>
            <input id="idConsultar" name="id" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-info">Consultar</button>
    </form>

    @if (Model != null && Model.ID_Combustible > 0)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Detalles de Combustible #@Model.ID_Combustible</h5>
                <p><strong>Tipo:</strong> @Model.Tipo</p>
                <p><strong>Precio/Litro:</strong> @Model.PrecioPorLitro</p>
                <p><strong>Stock:</strong> @Model.Stock litros</p>
            </div>
        </div>
    }
</div>

<script>
    document.querySelectorAll(".collapsible").forEach(btn => {
        btn.addEventListener("click", () => {
            btn.classList.toggle("active");
            const content = btn.nextElementSibling;
            content.style.display = content.style.display === "block" ? "none" : "block";
        });
    });
</script>
