@{
    ViewData["Title"] = "Dashboard Administrador";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var vehiculos = ViewBag.Vehiculos as List<BERKA.Models.Vehiculo>;
    var citas = ViewBag.Citas as List<BERKA.Models.Cita>;
    var revisiones = ViewBag.Revisiones as List<BERKA.Models.Revision>;
    var clientes = ViewBag.Clientes as List<BERKA.Models.Cliente>;
}

<div class="container mt-4">
    <h2 class="text-success mb-4">Panel de Administrador</h2>

    <h4 class="text-secondary">Vehículos Registrados</h4>
    <table class="table table-bordered table-striped">
        <thead class="table-success">
            <tr>
                <th>Placa</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Categoría</th>
                <th>Color</th>
                <th>Año</th>
                <th>Kilometraje</th>
                <th>Combustible</th>
                <th>Cliente</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var veh in vehiculos)
            {
                <tr>
                    <td>@veh.Placa</td>
                    <td>@veh.Marca</td>
                    <td>@veh.Modelo</td>
                    <td>@veh.Categoria</td>
                    <td>@veh.Color</td>
                    <td>@veh.Año</td>
                    <td>@veh.Kilometraje</td>
                    <td>@veh.tip_Combustible</td>
                    <td>@veh.Cliente?.Nombre</td>
                    <td class="text-center">
                        <form asp-action="EliminarVehiculo" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@veh.ID_Vehiculo" />
                            <button type="submit" class="btn btn-danger btn-sm" style="padding: 4px 10px;"
                                    onclick="return confirm('¿Deseas eliminar este vehículo?')">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="text-secondary mt-5">Citas Registradas</h4>
    <table class="table table-bordered table-striped">
        <thead class="table-success">
            <tr>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Estado</th>
                <th>Inspector</th>
                <th>Cliente</th>
                <th>Vehículo</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cita in citas)
            {
                <tr>
                    <td>@cita.Fecha.ToShortDateString()</td>
                    <td>@cita.Hora</td>
                    <td>@cita.Estado</td>
                    <td>@cita.Inspector?.Nombre @cita.Inspector?.Apellido</td>
                    <td>@cita.Cliente?.Nombre</td>
                    <td>@cita.Vehiculo?.Placa</td>
                    <td class="text-center">
                        <form asp-action="EliminarCita" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@cita.ID_Cita" />
                            <button type="submit" class="btn btn-danger btn-sm" style="padding: 4px 10px;"
                                    onclick="return confirm('¿Deseas eliminar esta cita?')">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="text-secondary mt-5">Revisiones</h4>
    <table class="table table-bordered table-striped">
        <thead class="table-success">
            <tr>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>Vehículo</th>
                <th>Resultado</th>
                <th>Observaciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rev in revisiones)
            {
                <tr>
                    <td>@rev.FechaRevision.ToShortDateString()</td>
                    <td>@rev.Cita?.Cliente?.Nombre</td>
                    <td>@rev.Cita?.Vehiculo?.Placa</td>
                    <td>@rev.Resultado</td>
                    <td>@rev.Observaciones</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="text-secondary mt-5">Clientes Registrados</h4>
    <table class="table table-bordered table-striped">
        <thead class="table-success">
            <tr>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cli in clientes)
            {
                <tr>
                    <td>@cli.Nombre</td>
                    <td>@cli.Correo</td>
                    <td>@cli.Telefono</td>
                    <td class="text-center">
                        <form asp-action="EliminarCliente" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@cli.ID_Cliente" />
                            <button type="submit" class="btn btn-danger btn-sm" style="padding: 4px 10px;"
                                    onclick="return confirm('¿Deseas eliminar este cliente?')">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-end mb-3">
    <form asp-action="Dashboard" asp-controller="Administrador" method="get">
        <button type="submit" class="btn btn-outline-success">
            🔄 Refrescar Dashboard
        </button>
    </form>
</div>

<div class="card mt-5">
    <div class="card-body">
        <h5 class="card-title">Citas en los últimos 7 días</h5>
        <canvas id="graficoCitas" width="400" height="200"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('graficoCitas').getContext('2d');
        const graficoCitas = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ["@DateTime.Today.AddDays(-6).ToString("dd-MMM")", "@DateTime.Today.AddDays(-5).ToString("dd-MMM")", "@DateTime.Today.AddDays(-4).ToString("dd-MMM")", "@DateTime.Today.AddDays(-3).ToString("dd-MMM")", "@DateTime.Today.AddDays(-2).ToString("dd-MMM")", "@DateTime.Today.AddDays(-1).ToString("dd-MMM")", "@DateTime.Today.ToString("dd-MMM")"],
                datasets: [{
                    label: 'Citas Registradas',
                    data: [3, 5, 7, 4, 8, 6, 9],
                    backgroundColor: 'rgba(0, 128, 0, 0.2)',
                    borderColor: 'rgba(0, 128, 0, 1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        precision: 0
                    }
                }
            }
        });
    </script>

    <script>
        const ctxDoughnut = document.getElementById('graficoRevisiones')?.getContext('2d');
        if (ctxDoughnut) {
            const chart = new Chart(ctxDoughnut, {
                type: 'doughnut',
                data: {
                    labels: ['Aprobados', 'Rechazados'],
                    datasets: [{
                        label: 'Revisiones',
                        data: [@ViewBag.Aprobados, @ViewBag.Rechazados],
                        backgroundColor: ['#28a745', '#dc3545'],
                        borderColor: ['#ffffff', '#ffffff'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }
    </script>
}