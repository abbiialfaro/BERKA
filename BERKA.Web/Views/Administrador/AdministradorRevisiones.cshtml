@* @model BERKA.Web.Models.RevisionViewModel *@

@{
    ViewData["Title"] = "Administrador de Revisiones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-success">🔍 @ViewData["Title"]</h1>
<hr />

<style>
    .collapsible {
        background-color: #eee;
        color: #444;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15pt;
        margin-bottom: 10px;
    }

        .active, .collapsible:hover {
            background-color: #ccc;
        }

    .content {
        display: none;
        overflow: hidden;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 5px;
        border: 1px solid #ddd;
        margin-bottom: 20px;
    }
</style>

<!-- Registrar Revisión -->
<button type="button" class="collapsible">Registrar Revisión</button>
<div class="content">
    <form asp-action="RegistrarRevision" method="post">
        <div class="form-group mb-3">
            <label asp-for="ID_Cita" class="form-label">ID de Cita:</label>
            <input asp-for="ID_Cita" type="number" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="FechaRevision" class="form-label">Fecha de Revisión:</label>
            <input asp-for="FechaRevision" type="date" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Resultado" class="form-label">Resultado:</label>
            <select asp-for="Resultado" class="form-control" required>
                <option value="">-- Seleccione --</option>
                <option value="Aprobado">Aprobado</option>
                <option value="Rechazado">Rechazado</option>
            </select>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Comentarios" class="form-label">Comentarios:</label>
            <textarea asp-for="Comentarios" class="form-control" rows="2"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Registrar Revisión</button>
    </form>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-info mt-4">@ViewBag.Mensaje</div>
    }
</div>

<!-- Actualizar Revisión -->
<button type="button" class="collapsible">Actualizar Revisión</button>
<div class="content">
    <form asp-action="ActualizarRevision" method="post">
        <div class="form-group mb-3">
            <label asp-for="ID_Revision" class="form-label">ID:</label>
            <input asp-for="ID_Revision" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label asp-for="FechaRevision" class="form-label">Nueva Fecha de Revisión:</label>
            <input asp-for="FechaRevision" type="date" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Resultado" class="form-label">Nuevo Resultado:</label>
            <select asp-for="Resultado" class="form-control" required>
                <option value="Aprobado">Aprobado</option>
                <option value="Rechazado">Rechazado</option>
            </select>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Comentarios" class="form-label">Nuevos Comentarios:</label>
            <textarea asp-for="Comentarios" class="form-control" rows="2"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Actualizar Revisión</button>
    </form>
</div>

<!-- Eliminar Revisión -->
<button type="button" class="collapsible">Eliminar Revisión</button>
<div class="content">
    <form asp-action="EliminarRevision" method="post">
        <div class="form-group mb-3">
            <label for="idEliminar" class="form-label">ID de Revisión a Eliminar:</label>
            <input id="idEliminar" name="ID_Revision" type="number" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-danger">Eliminar Revisión</button>
    </form>
</div>

<!-- Consultar Revisión -->
<button type="button" class="collapsible">Consultar Revisión</button>
<div class="content">
    <form asp-action="ConsultarRevision" method="get" class="mb-4">
        <div class="form-group mb-3">
            <label for="idConsultar" class="form-label">ID de Revisión:</label>
            <input id="idConsultar" name="id" type="number" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-info">Consultar</button>
    </form>

    @* Muestra los datos si Model no es nulo *@
    @if (Model != null && Model.ID_Revision > 0)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Detalles de Revisión #@Model.ID_Revision</h5>
                <p><strong>ID Cita:</strong> @Model.ID_Cita</p>
                <p><strong>Fecha:</strong> @Model.FechaRevision.ToString("yyyy-MM-dd")</p>
                <p><strong>Resultado:</strong> @Model.Resultado</p>
                <p><strong>Comentarios:</strong> @Model.Comentarios</p>
            </div>
        </div>
    }
</div>

<script>
    document.querySelectorAll(".collapsible").forEach(btn => {
        btn.addEventListener("click", () => {
            btn.classList.toggle("active");
            const content = btn.nextElementSibling;
            content.style.display = content.style.display === "block" ? "none" : "block";
        });
    });
</script>
