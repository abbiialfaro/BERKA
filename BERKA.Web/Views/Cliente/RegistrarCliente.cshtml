@model BERKA.Share.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Registrar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-success">➕ Registrar Cliente</h1>

<form action="@Url.Action("RegistrarCliente","Cliente")" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label for="TipoDocumento">Cédula</label>
        <input type="text"
               name="TipoDocumento"
               id="TipoDocumento"
               value="@Model?.TipoDocumento"
               class="form-control"
               required />
    </div>

    <div class="form-group mb-3">
        <label for="Nombre">Nombre</label>
        <input type="text"
               name="Nombre"
               id="Nombre"
               value="@Model?.Nombre"
               class="form-control"
               required />
    </div>

    <div class="form-group mb-3">
        <label for="Apellido">Apellido</label>
        <input type="text"
               name="Apellido"
               id="Apellido"
               value="@Model?.Apellido"
               class="form-control"
               required />
    </div>

    <div class="form-group mb-3">
        <label for="Correo">Correo</label>
        <input type="email"
               name="Correo"
               id="Correo"
               value="@Model?.Correo"
               class="form-control"
               required />
    </div>

    <div class="form-group mb-3">
        <label for="Telefono">Teléfono</label>
        <input type="tel"
               name="Telefono"
               id="Telefono"
               value="@Model?.Telefono"
               class="form-control"
               required />
    </div>

    <div class="form-group mb-3">
        <label for="Direccion">Dirección</label>
        <textarea name="Direccion"
                  id="Direccion"
                  class="form-control"
                  rows="2"
                  required>@Model?.Direccion</textarea>
    </div>

    <div class="form-group mb-3">
        <label for="Categoria">Categoría</label>
        <select name="Categoria"
                id="Categoria"
                class="form-control"
                required>
            <option value="">--Seleccione--</option>
            <option value="activo" @(Model?.Categoria == "activo" ? "selected" : "")>Activo</option>
            <option value="inactivo" @(Model?.Categoria == "inactivo" ? "selected" : "")>Inactivo</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>
