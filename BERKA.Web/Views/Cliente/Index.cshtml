@model BERKA.Web.Models.CitaViewModel

@{
    ViewData["Title"] = "Sacar Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-success mb-4">Sacar Cita</h2>

<form asp-action="SacarCita" method="post">
    <div class="form-group mb-3">
        <label for="Fecha">Fecha:</label>
        <input asp-for="Fecha" type="date" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label for="Hora">Hora:</label>
        <input asp-for="Hora" type="time" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label for="Placa">Placa del Vehículo:</label>
        <input asp-for="Placa" type="text" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label for="Categoria">Categoría del Vehículo:</label>
        <select asp-for="Categoria" class="form-control" required>
            <option value="">-- Seleccione --</option>
            @foreach (var cat in Model.Categorias)
            {
                <option value="@cat">@cat</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Agendar Cita</button>
</form>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Mensaje</div>
}