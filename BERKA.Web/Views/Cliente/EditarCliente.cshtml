@model BERKA.Share.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "✏️ Editar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-warning">@ViewData["Title"]</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

<form action="@Url.Action("EditarCliente","Cliente")" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="ID_Cliente" value="@Model.ID_Cliente" />

    <div class="form-group mb-3">
        <label for="TipoDocumento">Cédula</label>
        <input type="text"
               name="TipoDocumento"
               id="TipoDocumento"
               value="@Model.TipoDocumento"
               class="form-control"
               required />
    </div>

    <div class="form-group mb-3">
        <label for="Nombre">Nombre</label>
        <input type="text"
               name="Nombre"
               id="Nombre"
               value="@Model.Nombre"
               class="form-control"
               required />
    </div>

    <div class="form-group mb-3">
        <label for="Apellido">Apellido</label>
        <input type="text"
               name="Apellido"
               id="Apellido"
               value="@Model.Apellido"
               class="form-control"
               required />
    </div>

    <div class="form-group mb-3">
        <label for="Correo">Correo</label>
        <input type="email"
               name="Correo"
               id="Correo"
               value="@Model.Correo"
               class="form-control"
               required />
    </div>

    <div class="form-group mb-3">
        <label for="Telefono">Teléfono</label>
        <input type="tel"
               name="Telefono"
               id="Telefono"
               value="@Model.Telefono"
               class="form-control"
               required />
    </div>

    <div class="form-group mb-3">
        <label for="Direccion">Dirección</label>
        <textarea name="Direccion"
                  id="Direccion"
                  class="form-control"
                  rows="2"
                  required>@Model.Direccion</textarea>
    </div>

    <div class="form-group mb-3">
        <label for="Categoria">Categoría</label>
        <select name="Categoria"
                id="Categoria"
                class="form-control"
                required>
            <option value="">--Seleccione--</option>
            <option value="activo" @(Model.Categoria == "activo" ? "selected" : "")>Activo</option>
            <option value="inactivo" @(Model.Categoria == "inactivo" ? "selected" : "")>Inactivo</option>
        </select>
    </div>

    <button type="submit" class="btn btn-warning">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>