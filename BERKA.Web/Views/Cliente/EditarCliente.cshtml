@model BERKA.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-warning">✏️ Editar Cliente</h2>

<form asp-action="EditarCliente" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ID_Cliente" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" type="email" />
    </div>

    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Direccion"></label>
        <textarea asp-for="Direccion" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Categoria"></label>
        <select asp-for="Categoria" class="form-control">
            <option value="activo">Activo</option>
            <option value="inactivo">Inactivo</option>
        </select>
    </div>

    <button type="submit" class="btn btn-warning mt-3">Actualizar</button>
</form>
